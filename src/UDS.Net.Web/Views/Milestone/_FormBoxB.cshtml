@model Milestone
@{
}
<table class="table table-bordered table-striped">
    <thead>
        <tr class="table-secondary">
            <th colspan="3">
                BOX B - NO FURTHER CONTACT
                <div><span asp-validation-for="NoFurtherContactReasonProvided" class="text-danger"></span></div>
            </th>
        </tr>
    </thead>
    <tbody>
        <tr class="subcounterreset">
            <td><span class="counter"></span></td>
            <td colspan="2">
                <div class="form-check-inline">
                    <span class="subcounter"></span>
                    @Html.CheckBox("ParticipantIsDeceased", Model.ParticipantIsDeceased != null && (bool)Model.ParticipantIsDeceased, new { @class = "form-check-input boxBToggle", @data_toggle_values = "[true]", @data_toggle_targets = "ParticipantHasWithdrawn,WithdrawnMonth,WithdrawnDay,WithdrawnYear,WithdrawnPrimaryReason" })
                    <label class="form-check-label" for="ParticipantIsDeceased"> <span class="badge badge-pill badge-light">Deceased</span> @Html.DisplayNameFor(x => x.ParticipantIsDeceased) <small class="font-weight-light font-italic text-primary">(Complete DEATH section)</small></label>
                </div>
            </td>
        </tr>
        <tr>
            <td></td>
            <td colspan="2">
                <div class="form-check-inline">
                    <span class="subcounter"></span>
                    @Html.CheckBox("ParticipantHasWithdrawn", Model.ParticipantHasWithdrawn != null && (bool)Model.ParticipantHasWithdrawn, new { @class = "form-check-input boxBToggle", @data_toggle_values = "[true]", @data_toggle_targets = "ParticipantIsDeceased,DateOfDeathMonth,DateOfDeathDay,DateOfDeathYear,ADCAutopsyStatus" })
                    <label class="form-check-label" for="ParticipantHasWithdrawn"> <span class="badge badge-pill badge-light">Withdrawn</span> @Html.DisplayNameFor(x => x.ParticipantHasWithdrawn) <small class="font-weight-light font-italic text-primary">(Complete DROPPED section)</small></label>
                </div>
            </td>
        </tr>
    </tbody>
    <tbody>
        <tr class="table-primary">
            <td colspan="3"><span class="counter"></span> DEATH</td>
        </tr>
        <tr>
            <td><span class="subcounter"></span></td>
            <td>Date of death <small class="font-weight-light font-italic text-primary">(Unknown = 99/99/YEAR REQUIRED)</small></td>
            <td>
                <div class="form-group">
                    <div class="form-inline">
                        <input asp-for="DateOfDeathMonth" class="form-control boxBToggle" style="width:70px;" placeholder="mm" />
                        <input asp-for="DateOfDeathDay" class="form-control boxBToggle" style="width:70px;" placeholder="dd" />
                        <input asp-for="DateOfDeathYear" class="form-control boxBToggle" style="width:150px;" placeholder="yyyy" />
                    </div>
                </div>
                <div><span asp-validation-for="DateOfDeathMonth" class="text-danger"></span></div>
                <div><span asp-validation-for="DateOfDeathDay" class="text-danger"></span></div>
                <div><span asp-validation-for="DateOfDeathYear" class="text-danger"></span></div>

            </td>
        </tr>
        <tr>
            <td><span class="subcounter"></span></td>
            <td>ADC autopsy</td>
            <td>
                <div class="form-check">
                    <input type="radio" class="form-check-input boxBToggle" asp-for="ADCAutopsyStatus" id="ADCAutopsyStatus[1]" value="false" />
                    <label class="form-check-label" for="ADCAutopsyStatus[1]"><span class="badge badge-pill badge-light">0</span> No ADC autopsy expected</label>
                </div>
                <div class="form-check">
                    <input type="radio" class="form-check-input boxBToggle" asp-for="ADCAutopsyStatus" id="ADCAutopsyStatus[2]" value="true" />
                    <label class="form-check-label" for="ADCAutopsyStatus[2]"><span class="badge badge-pill badge-light">1</span> An ADC autopsy has been done; data submitted or pending</label>
                </div>
                <div><span asp-validation-for="ADCAutopsyStatus" class="text-danger"></span></div>
            </td>
        </tr>
        <tr>
            <td></td>
            <td colspan="2"><span class="text-uppercase font-weight-light font-italic text-primary">END FORM HERE</span></td>
        </tr>
    </tbody>
    <tbody>
        <tr class="table-primary">
            <td colspan="3"><span class="counter"></span> DROPPED</td>
        </tr>
        <tr>
            <td colspan="3"><span class="text-uppercase font-weight-light font-italic text-primary">DO NOT</span> fill out this section if the participant has consented to autopsy or if you will maintain minimal contact. Instead, fill out <span class="text-uppercase font-weight-light font-italic text-primary">BOX A QUESTION 2 UDS STATUS</span> section.</td>
        </tr>
        <tr>
            <td><span class="subcounter"></span></td>
            <td>Date dropped from ADC <small class="font-weight-light font-italic text-primary">(Unknown = 99/99/YEAR REQUIRED)</small></td>
            <td>
                <div class="form-group">
                    <div class="form-inline">
                        <input asp-for="WithdrawnMonth" class="form-control boxBToggle" style="width:70px;" placeholder="mm" />
                        <input asp-for="WithdrawnDay" class="form-control boxBToggle" style="width:70px;" placeholder="dd" />
                        <input asp-for="WithdrawnYear" class="form-control boxBToggle" style="width:150px;" placeholder="yyyy" />
                    </div>
                </div>
                <div><span asp-validation-for="WithdrawnMonth" class="text-danger"></span></div>
                <div><span asp-validation-for="WithdrawnDay" class="text-danger"></span></div>
                <div><span asp-validation-for="WithdrawnYear" class="text-danger"></span></div>

            </td>
        </tr>
        <tr>
            <td><span class="subcounter"></span></td>
            <td>Main reason for being dropped from ADC <span class="text-uppercase font-weight-light font-italic text-primary">(CHECK ONE)</span></td>
            <td>
                <div class="form-check">
                    <input type="radio" class="form-check-input boxBToggle" asp-for="WithdrawnPrimaryReason" id="WithdrawnPrimaryReason[1]" value="1" />
                    <label class="form-check-label" for="WithdrawnPrimaryReason[1]"><span class="badge badge-pill badge-light">1</span> ADC decision or protocol</label>
                </div>
                <div class="form-check">
                    <input type="radio" class="form-check-input boxBToggle" asp-for="WithdrawnPrimaryReason" id="WithdrawnPrimaryReason[2]" value="2" />
                    <label class="form-check-label" for="WithdrawnPrimaryReason[2]"><span class="badge badge-pill badge-light">2</span> Participant or co-participant asked to be dropped (ie. withdrawn)</label>
                </div>
                <div><span asp-validation-for="WithdrawnPrimaryReason" class="text-danger"></span></div>
            </td>
        </tr>
    </tbody>
</table>