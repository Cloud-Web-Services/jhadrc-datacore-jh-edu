@model ParticipantDemographics
@{
}

<tr>
    <td><span class="counter"></span></td>
    <td>
        <div class="form-group">
            <label asp-for="PrimaryLanguage" class="control-label"></label>
            <div><span class="text-danger" asp-validation-for="PrimaryLanguage"></span></div>
            <div><span class="text-danger" asp-validation-for="PrimaryLanguageOther"></span></div>
        </div>
    </td>
    <td>

        <div class="form-check">
            <input class="form-check-input" type="radio" id="PrimaryLanguage[1]" value="1" name="PrimaryLanguage" asp-for="PrimaryLanguage" data-toggle-values="[1,2,3,4,5,6,9]" data-toggle-targets="PrimaryLanguageOther">
            <label class="form-check-label" for="PrimaryLanguage[1]"> <span class="badge badge-pill badge-light">1</span> English</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio" id="PrimaryLanguage[2]" value="2" name="PrimaryLanguage" asp-for="PrimaryLanguage" data-toggle-values="[1,2,3,4,5,6,9]" data-toggle-targets="PrimaryLanguageOther">
            <label class="form-check-label" for="PrimaryLanguage[2]"> <span class="badge badge-pill badge-light">2</span> Spanish</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio" id="PrimaryLanguage[3]" value="3" name="PrimaryLanguage" asp-for="PrimaryLanguage" data-toggle-values="[1,2,3,4,5,6,9]" data-toggle-targets="PrimaryLanguageOther">
            <label class="form-check-label" for="PrimaryLanguage[3]"> <span class="badge badge-pill badge-light">3</span> Mandarin</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio" id="PrimaryLanguage[4]" value="4" name="PrimaryLanguage" asp-for="PrimaryLanguage" data-toggle-values="[1,2,3,4,5,6,9]" data-toggle-targets="PrimaryLanguageOther">
            <label class="form-check-label" for="PrimaryLanguage[4]"> <span class="badge badge-pill badge-light">4</span> Cantonese</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio" id="PrimaryLanguage[5]" value="5" name="PrimaryLanguage" asp-for="PrimaryLanguage" data-toggle-values="[1,2,3,4,5,6,9]" data-toggle-targets="PrimaryLanguageOther">
            <label class="form-check-label" for="PrimaryLanguage[5]"> <span class="badge badge-pill badge-light">5</span> Russian</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio" id="PrimaryLanguage[6]" value="6" name="PrimaryLanguage" asp-for="PrimaryLanguage" data-toggle-values="[1,2,3,4,5,6,9]" data-toggle-targets="PrimaryLanguageOther">
            <label class="form-check-label" for="PrimaryLanguage[6]"> <span class="badge badge-pill badge-light">6</span> Japanese</label>
        </div>

        <div class="form-inline">
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="PrimaryLanguage[7]" value="8" name="PrimaryLanguage" asp-for="PrimaryLanguage" data-toggle-values="[1,2,3,4,5,6,9]" data-toggle-targets="PrimaryLanguageOther">
                    <label class="form-check-label" for="PrimaryLanguage[7]"> <span class="badge badge-pill badge-light">8</span> Other primary language</label>
                </div>
            </div>
            <div class="form-group ml-2">
                <input type="text" class="form-control" asp-for="PrimaryLanguageOther" disabled>
            </div>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio" id="PrimaryLanguage[8]" value="9" name="PrimaryLanguage" asp-for="PrimaryLanguage" data-toggle-values="[1,2,3,4,5,6,9]" data-toggle-targets="PrimaryLanguageOther">
            <label class="form-check-label" for="PrimaryLanguage[8]"> <span class="badge badge-pill badge-light">9</span> Unknown</label>
        </div>

    </td>
</tr>
<tr>
    <td><span class="counter"></span></td>
    <td>
        <div class="form-group">
            <label asp-for="Education" class="control-label"></label>
            <div><span class="text-danger" asp-validation-for="Education"></span></div>
        </div>
    </td>
    <td>
        <div class="col-md-3">
            <input class="form-control" type="number" name="Education" asp-for="Education">
        </div>
        <div class="col-md-12 pt-3">
            <ul class="list-inline">
                <li class="list-inline-item">12 = high school or GED</li>
                <li class="list-inline-item">16 = bachelor’s degree</li>
                <li class="list-inline-item">18 = master’s degree</li>
                <li class="list-inline-item">20 = doctorate</li>
                <li class="list-inline-item">99 = unknown</li>
            </ul>
        </div>
    </td>
</tr>