@model IEnumerable<MedicationReference>

@{ ViewData["Title"] = "Index"; }

<h1>Medication Reference</h1>

<p class="lead">
    If a medication is not listed below, create a new reference for the drug or brand name and determine its drugID by using the Lookup Tool on the NACC website at <a href="https://www.alz.washington.edu/MEMBER/DrugCodeLookUp.html" target="_blank">https://www.alz.washington.edu/MEMBER/DrugCodeLookUp.html</a>.
</p>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DrugId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromNACCDefaultReference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOverTheCounter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.DrugId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DisplayName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FromNACCDefaultReference)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsOverTheCounter)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.DrugId">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.DrugId">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.DrugId">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
