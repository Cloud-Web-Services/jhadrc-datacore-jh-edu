                    <!-- Bills -->
                    <tr>
                        <td colspan="2">
                            <label asp-for="Bills" class="control-label"></label><br>
                            <span asp-validation-for="Bills" class="text-danger"></span>
                        </td>
                        @foreach (KeyValuePair<string, string> code in ViewBag.BasicResponse.Codes)
                        {
            <td>

                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="Bills"
                           id="Bills[@code.Key]"
                           value="@code.Key" />
                    <label class="form-check-label" for="Bills[@code.Key]"> <span class="badge badge-pillbadge-light">@code.Key </span></label>
